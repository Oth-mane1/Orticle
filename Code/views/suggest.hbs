        class="bg-ogrey-light p-4 h-full rounded-xl  transition-transform transform hover:translate-x-2 hover:-translate-y-2"
        data-id="{{ this.IdArticle }}">
        <header class="flex justify-between items-start mb-3">
            <div>
                <h2 class="font-semibold text-2xl">
                    {{ this.titreUtl }}
                </h2>
                <a class="inline-flex border-oblue hover:shadow-md text-oblue border-2 px-3 mt-1 transition-shadow rounded-full"
                    href="{{ this.sourceUtl }}" target="_blank">
                    <img src="../images/app/internet.svg" alt="Internet Icon" class="w-4">
                    <span class="transform -translate-y-0.5 ml-1">{{ this.shortSrcArt }}</span>
                </a>
            </div>
            <div class="relative group">
                <button class="py-1 px-2">
                    <svg width="6" height="24" viewBox="0 0 6 24" fill="none" xmlns="http://www.w3.org/2000/svg">
