<!-- Orticle -->
<div class="bg-oblue rounded-2xl z-50">
    <article
        class="bg-ogrey-light h-full p-4 rounded-xl transition-transform transform hover:translate-x-2 hover:-translate-y-2">
        <header class="flex justify-between items-start mb-3">
            <div>
                <a href="/app/orticle/{{ this.IdOrt }}">
                    <h2 class="font-semibold text-2xl">
                        {{this.titreOrt}}
                    </h2>
                </a>
                <a class="inline-flex border-oblue hover:shadow-md text-oblue border-2 px-3 mt-1 transition-shadow rounded-full"
                    href="{{ this.sourceOrt }}" target="_blank">
                    <img src="/images/app/internet.svg" alt="Internet Icon" class="w-4">
                    <span class="transform -translate-y-0.5 ml-1">{{ this.shortSrcOrt }}</span>
                </a>

            </div>
            <div class="min-w-max flex items-start mt-1">
                <span class="border-gray-500 text-gray-500 text-sm border-2 mt-0.5 px-2 pb-0.5 rounded-full">
                    {{this.nomCat}}
                </span>
        </header>
        <section class="grid grid-cols-2 md:grid-cols-3 gap-2">
            <div class="col-span-2 row-span-2 bg-oblue p-3 rounded-xl overflow-hidden">
                {{#with this.idee}}
                <h2 class="text-gray-50 text-xl font-semibold mb-2">
                    {{ this.[0].titreIde }} </h2>
                <p>
                    {{ this.[0].corpsIde }}
                </p>
            </div>
            <p class="bg-oblue text-gray-50 text-xl font-semibold p-3 flex items-center rounded-xl overflow-hidden">
                {{ this.[1].titreIde }}
            </p>

            {{/with}}
            <p
                class="bg-oblue text-gray-50  text-xl text-center font-semibold p-3 flex items-center rounded-xl overflow-hidden">
                {{ minus this.idee.length 2 }}
                autre id√©es
            </p>
        </section>
    </article>
</div>
{{/if}}
{{/with}}

